<p>業務登録</p>
<div class='marker field'>
  <%= form_with model: @user_business_schedule ,url: site_business_schedules_path, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="field">
      <%= f.label :business_content_id %><br />
      <%= f.collection_select(:business_content_id, BusinessContent.all, :id, :name) %>
    </div>

    <div class="field">
      <%= f.label :survey_id%><br />
