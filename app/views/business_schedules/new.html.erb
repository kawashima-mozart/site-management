      <%= f.label :order_day %><br />
      <%= raw sprintf(
                    f.date_field(
                      :order_day,
                      class:'select-day',
                      id:"witness-date")
                    ) %>
    </div>

    <div class="field">
      <%= f.label :delivery_day %><br />
