<h2>現場登録</h2>

<%= form_with(model: @site, url: site_path(@site.id), local: true) do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :customer %><br />
    <%= f.text_field :customer %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>
