<div class='content'>
  <div class='title'>
    <h4>新規現場登録</h4>
    <%= link_to '戻る', :back%>
  </div>
  <%= form_with model: @site, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :customer %><br />
      <%= f.text_field :customer %>
    </div>

    <div class="actions">
      <%= f.submit "登録" %>
    </div>
  <% end %>
</div>